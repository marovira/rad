{
    "version": 3,
    "cmakeMinimumRequired":{
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "dev",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "RAD_USE_ONNX": "ON",
                "RAD_BUILD_TESTS": "ON",
                "RAD_INSTALL_TARGET": "ON"
            }
        },
        {
            "name": "ci",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "RAD_USE_ONNX": "ON",
                "RAD_BUILD_TESTS": "ON",
                "RAD_CI_BUILD": "ON"
            }
        },
        {
            "name": "msvc-base",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/W4 /WX /MP /EHsc -DNOMINMAX",
                "RAD_USE_ONNX_DML": "ON"
            }
        },
        {
            "name": "unix-base",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O0 -DDEBUG",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic -Werror"
            }
        },
        {
            "name": "msvc-dev",
            "displayName": "MSVC dev",
            "description": "Default dev build for MSVC",
            "inherits": ["dev", "msvc-base"]
        },
        {
            "name": "msvc-ci",
            "displayName": "MSVC CI",
            "description": "MSVC build for CI",
            "inherits": ["ci", "msvc-base"],
            "cacheVariables": {
                "RAD_CI_BUILD": "ON"
            }
        },
        {
            "name": "gcc-dev",
            "displayName": "GCC dev",
            "description": "Default dev build for GCC",
            "inherits": ["dev", "unix-base"]
        },
        {
            "name": "gcc-ci",
            "displayName": "GCC CI",
            "description": "Default build for GCC using ONNXRuntime",
            "inherits": ["ci", "unix-base"],
            "cacheVariables": {
                "RAD_CI_BUILD": "ON"
            }
        },
        {
            "name": "clang-dev",
            "displayName": "Clang dev",
            "description": "Default dev build for Clang",
            "inherits": ["dev", "unix-base"],
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic -Werror -stdlib=libstdc++"
            }
        },
        {
            "name": "clang-ci",
            "displayName": "Clang CI",
            "description": "Default ci build for Clang",
            "inherits": ["ci", "unix-base"],
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic -Werror -stdlib=libstdc++"
            }
        },
        {
            "name": "apple-dev",
            "displayName": "Apple dev",
            "description": "Default dev build for Apple",
            "inherits": ["dev", "unix-base"],
            "cacheVariables": {
                "RAD_USE_ONNX_COREML": "ON"
            }
        },
        {
            "name": "apple-ci",
            "displayName": "Apple CI",
            "description": "Default CI build for Apple",
            "inherits": ["ci", "unix-base"],
            "cacheVariables": {
                "RAD_USE_ONNX_COREML": "ON"
            }
        }
    ]

}
